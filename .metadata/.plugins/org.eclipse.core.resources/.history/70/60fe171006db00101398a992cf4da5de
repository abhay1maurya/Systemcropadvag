        function loadDistricts() {
            const stateSel = document.getElementById('state');
            const districtSel = document.getElementById('district');
            const citySel = document.getElementById('city');
            
            const selectedState = stateSel.value;
            
            // Reset
            districtSel.innerHTML = '<option value="">Select District</option>';
            citySel.innerHTML = '<option value="">Select City</option>';
            citySel.disabled = true;

            if(selectedState && data[selectedState]) {
                const districts = Object.keys(data[selectedState]);
                districts.forEach(d => {
                    const opt = document.createElement('option');
                    opt.value = d;
                    opt.textContent = d;
                    districtSel.appendChild(opt);
                });
                districtSel.disabled = false;
            } else {
                districtSel.disabled = true;
            }
        }

        function loadCities() {
            const stateSel = document.getElementById('state');
            const districtSel = document.getElementById('district');
            const citySel = document.getElementById('city');
            
            const selectedState = stateSel.value;
            const selectedDistrict = districtSel.value;

            // Reset
            citySel.innerHTML = '<option value="">Select City</option>';

            if(selectedState && selectedDistrict && data[selectedState][selectedDistrict]) {
                const cities = data[selectedState][selectedDistrict];
                cities.forEach(c => {
                    const opt = document.createElement('option');
                    opt.value = c;
                    opt.textContent = c;
                    citySel.appendChild(opt);
                });
                citySel.disabled = false;
            } else {
                citySel.disabled = true;
            }
        }

        // --- 5. Final Submission ---
        document.getElementById('signupWizardForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Collect all data
            const formData = {
                name: document.getElementById('fullName').value,
                phone: document.getElementById('phoneNumber').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
                language: document.getElementById('language').value,
                state: document.getElementById('state').value,
                district: document.getElementById('district').value,
                city: document.getElementById('city').value
            };

            console.log("Registration Data:", formData);

            // Simulate API Call
            const btn = e.submitter;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Registering...';
            btn.disabled = true;

            setTimeout(() => {
                // Show Success Screen
                showStep(4); // 4 = Success Screen
                
                // Redirect after 2 seconds
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 2000);
            }, 1500);
        });

